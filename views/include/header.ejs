<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bloging App</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  
</head>
<body>
  <nav class="navbar">
    <!-- Left Side -->
    <div class="nav-left">
      <% if (typeof user !== 'undefined') { %>
        <a href="/notes">Blog <i class="fa-solid fa-blog"></i></a>
        <a href="/myblog">My Blog <i class="fa-solid fa-blog"></i></a>
      <% } else { %>
        <a href="/">Home <i class="fa-solid fa-house"></i></a>
      <% } %>
    </div>
  
    <!-- Right Side -->
    <div class="nav-right">
      <% if (typeof user !== 'undefined') { %>
        <a href="/logout">Logout <i class="fa-solid fa-right-from-bracket"></i></a>
      <% } else { %>
        <a href="/login">Login <i class="fa-solid fa-user"></i></a>
        <a href="/signup">Sign Up <i class="fa-solid fa-user-plus"></i></a>
      <% } %>
    </div>
  </nav>
  
   